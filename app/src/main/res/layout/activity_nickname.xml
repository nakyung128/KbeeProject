<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NicknameActivity"
    tools:layout_editor_absoluteX="-1dp"
    tools:layout_editor_absoluteY="13dp" >


    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="454dp"
        android:layout_height="704dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.311"
        app:srcCompat="@drawable/nick" />

    <EditText
        android:id="@+id/nameEdit"
        android:layout_width="256dp"
        android:layout_height="48dp"
        android:background="@drawable/rectangle6"
        android:ems="10"
        android:fontFamily="@font/kotrahope"
        android:hint="여기에 입력"
        android:inputType="textPersonName"
        android:layerType="hardware"
        android:minHeight="48dp"
        android:paddingLeft="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="192dp"
        android:layout_height="31dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/kotrahope"
        android:gravity="center"
        android:text="닉네임을 설정해 주세요"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/nameEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/applyBtn"
        android:layout_width="151dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rectangle16"
        android:fontFamily="@font/kotrahope"
        android:text="결정"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameEdit"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>